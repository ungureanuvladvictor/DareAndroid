<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginLeft="@dimen/story_item_horizontal_padding"
        android:layout_marginRight="@dimen/story_item_horizontal_padding"
        android:layout_marginTop="@dimen/story_item_vertical_padding"
        android:background="@drawable/story_item_top_bg"
        android:padding="10dp">
        <TextView
            android:id="@+id/title"
            android:textStyle="bold"
            style="@style/StoryText"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginLeft="@dimen/story_item_horizontal_padding"
        android:layout_marginRight="@dimen/story_item_horizontal_padding"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginLeft="@dimen/story_item_horizontal_padding"
        android:layout_marginRight="@dimen/story_item_horizontal_padding"/>
    <TextView
        android:id="@+id/description"
        style="@style/StoryText"
        android:background="@color/story_item_border"
        android:layout_marginLeft="@dimen/story_item_horizontal_padding"
        android:layout_marginRight="@dimen/story_item_horizontal_padding"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_width="fill_parent"/>
    <TextView
        android:id="@+id/author"
        style="@style/StoryText"
        android:background="@color/story_item_border"
        android:layout_marginLeft="@dimen/story_item_horizontal_padding"
        android:layout_marginRight="@dimen/story_item_horizontal_padding"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:padding="10dp"
        android:gravity="right"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginLeft="@dimen/story_item_horizontal_padding"
        android:layout_marginRight="@dimen/story_item_horizontal_padding"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/story_item_bot_bg"
        android:layout_marginBottom="@dimen/story_item_vertical_padding"
        android:layout_marginLeft="@dimen/story_item_horizontal_padding"
        android:layout_marginRight="@dimen/story_item_horizontal_padding"
        android:padding="10dp">

        <ImageView
            android:id="@+id/accept"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:src="@drawable/accept_button"
            android:scaleType="centerInside"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"/>
        <ImageView
            android:id="@+id/favorite"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:src="@drawable/star_active"
            android:layout_margin="10dp"/>
        <ImageView
            android:id="@+id/reject"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:src="@drawable/reject_button"
            android:scaleType="centerInside"
            android:padding="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"/>
    </LinearLayout>

</LinearLayout>

